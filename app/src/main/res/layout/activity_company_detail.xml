<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">


    <TextView
        android:id="@+id/companyRIC"
        style="@style/CompanyRIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Google" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/companyRIC"
        tools:text="Google Inc." />

    <TextView
        android:id="@+id/companySharePrice"
        style="@style/CompanySharePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/companyName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/companyName"
        tools:text="$15.24" />

    <TextView
        android:id="@+id/companyCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        tools:text="EE.UU." />

    <TextView
        android:id="@+id/companyDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/description_margin"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/companyCountry"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud..." />

</android.support.constraint.ConstraintLayout>